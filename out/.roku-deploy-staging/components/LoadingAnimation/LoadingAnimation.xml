<?xml version="1.0" encoding="utf-8"?>

<component name ="LoadingAnimation" extends="Group" >

<interface>
    <field id="duration" type="time" />
</interface>

<script type ="text/brightscript" uri="pkg:/components/LoadingAnimation/LoadingAnimation.brs" />

<children>

<Group id = "circles" >

<Poster 
id = "circleOne"
width= "20"
height= "20"
translation= "[200, 200]"
uri= "pkg:/images/white_circle.png" />

<Poster id = "circleTwo"
width= "20"
height= "20"
translation= "[220, 200]"
uri= "pkg:/images/white_circle.png" />
          
<Poster id = "circleThree"
width= "20"
height= "20"
translation= "[240, 200]"
uri= "pkg:/images/white_circle.png" />

</Group>

<ParallelAnimation id = "animateCircles" >

<Animation 
id = "c1Animation" 
easeFunction = "linear"
repeat = "true"
delay = "0.1" >
<Vector2DFieldInterpolator id = "c1translation"
fieldToInterp = "circleOne.translation"
key= "[0.0, 0.30, 0.60, 0.80, 1.0]"
keyValue= "[ [200.0, 200.0], [200.0, 180.0], [200.0, 180.0], [200.0, 200.0], [200.0, 200.0] ]"/>

</Animation>

<Animation 
id = "c2Animation" 
easeFunction = "linear"
repeat = "true"
delay = "0.2" >
<Vector2DFieldInterpolator id = "c2translation"
fieldToInterp = "circleTwo.translation"
key= "[0.0, 0.30, 0.60, 0.80, 1.0]"
keyValue= "[ [220.0, 200.0], [220.0, 180.0], [220.0, 180.0], [220.0, 200.0], [220.0, 200.0] ]"/>
<ColorFieldInterpolator id = "c2color"
key="[0.0, 0.25, 0.5, 0.75, 1.0]" 
keyValue="[ 0x000000FF, 0xFF0000FF, 0x00FF00FF, 0x0000FFFF, 0x00FFFFFF]"
fieldToInterp="circleTwo.blendColor" />
</Animation>

<Animation id = "c3Animation" 
easeFunction = "linear"
repeat = "true"
delay = "0.3" >
<Vector2DFieldInterpolator id = "c3translation"
fieldToInterp = "circleThree.translation"
key= "[0.0, 0.30, 0.60, 0.80, 1.0]"
keyValue= "[ [240.0, 200.0], [240.0, 180.0], [240.0, 180.0], [240.0, 200.0], [240.0, 200.0] ]"/>
<ColorFieldInterpolator id = "c3color"
key="[0.0, 0.25, 0.5, 0.75, 1.0]" 
keyValue="[ 0x000000FF, 0xFF0000FF, 0x00FF00FF, 0x0000FFFF, 0x00FFFFFF]"
fieldToInterp="circleThree.blendColor"/>
</Animation>

</ParallelAnimation>


</children>

</component>