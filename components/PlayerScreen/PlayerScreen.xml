<component name="PlayerScreen" extends="Screen" initialFocus = "video">
<interface>
<field id="content" type="node" alias="video.content" />
<field id="title" type="string" alias="title.text" />
<field id="loop" type="boolean" />
</interface>

<children>
<Video 
id = "video"
enableTrickPlay	 = "false"
enableUI = "false"
seekMode = "accurate"
loop = "false"
/>
<Group
id = "playerPanel"
translation = "[0,0]">
<Rectangle
        id = "titleBar"
        height = "90"
        width = "1920"
        color = "0x000000FF"
        opacity = "0.8"
        translation = "[0,0]"
        >
        <Label
        id = "title"
        color = "0xFFFFFFFF"
        width = ""
        height = ""
        text = "title"
        translation = "[30,30]"
        />
    </Rectangle>
    <Timer
	id = "hideTimer"
	repeat = "false"
	duration = "3"
	/>
<Timer
id = "longPressObserveTimer"
repeat = "false"
duration = "0.5"
/>
<Timer
id = "forwardTimer"
repeat = "true"
duration = "0.1"
/>
<Timer
id = "rewindTimer"
repeat = "true"
duration = "0.1"
/>
<Rectangle
        id = "PlayBar"
        height = "180"
        width = "1920"
        color = "0x000000FF"
        opacity = "0.8"
        translation = "[0,900]"
        >
        <Rectangle
            id = "progressBarBack"
            height = "9"
            width = "1620"
            color = "0xFFFFFFFF"
            translation = "[150,45]">
            <Rectangle
                id = "progressBar"
                height = "9"
                width = "0"
                color = "0xBF5FFFFF"/>
                <Poster
                id = "point"
                uri = "pkg:/images/point.png"
                translation = "[-10, -5]"
                />

        </Rectangle>
        <Label
            id = "currentPosition"
            color = "0xFFFFFFFF"
            width = "150"
            height = "36"
            text = "current">
        </Label>
        <Label
            id = "duration"
            color = "0xFFFFFFFF"
            horizAlign = "right"
            width = "150"
            height = "36"
            text = "duration"
            >
        </Label>
        <CustomMarkupGrid 
        id = "buttonsGrid" 
        drawFocusFeedback = "false"
        itemComponentName = "ButtonsGridItem"
        numColumns = "5" 
        numRows = "1" 
        rowHeights = "[75]"
        itemSize = "[75, 75]" 
        itemSpacing = "[ 18, 30 ]" 
        wrapDividerBitmapUri = "none"
        vertFocusAnimationStyle = "fixedFocus" 
        horizFocusAnimationStyle = "floatingFocus"
        />
    </Rectangle>
</Group>

</children>

    <script type="text/brightscript" uri="PlayerScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/Utils/utils.brs" />
</component>