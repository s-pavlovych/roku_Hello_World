<component name="RowListItem" extends="Group">

<interface>
    <field id = "itemContent" type = "node" onChange = "showcontent"/>
    <field id= "width" type= "float" onChange= "updateLayout"/> 
    <field id= "height" type= "float" onChange= "updateLayout"/>
    <field id= "rowIndex" type= "integer" onChange= "setLabels" /> 
    <field id= "posterHeader" type="string" />
</interface>

<children >

<MaskGroup 
id = "maskGroup" 
maskuri = "pkg:/images/posterMask.png" >
    <Poster 
    id = "itemPoster"
    uri = "pkg:/images/posterMask.png"
    >
    <Poster
    id = "posterTeam1" 
    loadDisplayMode	= "scaleToFit	"
    translation = "[0,0]"
    />
    <Poster
    id = "posterTeam2"
    loadDisplayMode	= "scaleToFit	" 
    translation = "[0,0]"
    />
    </Poster>
</MaskGroup>

<ScrollingLabel 
id = "title" 
horizAlign = "left"
vertAlign = "bottom" 
/>

<Label 
id = "time" 
horizAlign = "left"
vertAlign = "bottom" 
text = "time"
/>

<Label 
id = "score" 
horizAlign = "right"
vertAlign = "top" 
/>

</children>


<script type="text/brightscript" uri="RowListItem.brs" />
    
</component>