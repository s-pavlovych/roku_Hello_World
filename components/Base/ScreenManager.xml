<component name="ScreenManager" extends="Group">

    <interface>
        <field id="animation" type="string" alias="backAnimation.control" />
        <field id="duration" type="time" alias="backAnimation.duration" />
        <field id="isEmpty" type="boolean" value="false" />
        <function name="showScreen"/>
        <function name="popScreen"/>
        <function name="delScreen"/>
    </interface>

<children>
    <Poster id="background" uri="pkg:/images/someBackground.jpg" width="1920" height="1080"/>

<Animation id="backAnimation"  duration = "0.3" easeFunction="outQuad" repeat="false" control= "stop" delay= "0">
    <FloatFieldInterpolator
        id="fade"
        key="[0.0, 1.0]"
        keyValue="[ 0, 1 ]"
        reverse = "false"
        />

    </Animation>
</children>
<script type="text/brightscript" uri="ScreenManager.brs" />

</component>