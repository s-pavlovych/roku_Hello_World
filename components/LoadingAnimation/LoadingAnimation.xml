<component name="LoadingAnimation" extends="Group">

<interface>
    <field id="duration" type="time" value="1" alias ="c1Animation.duration, c2Animation.duration, c3Animation.duration"/>
    <field id="control" type="string" value="stop" alias ="animateCircles.control"/>
    <field id="colorsControl" type="string" value="start" alias ="c1AnimationColor.control, c2AnimationColor.control, c3AnimationColor.control"/>
    <field id="colorReverse" type="boolean" value="false" alias ="c1color.reverse, c2color.reverse, c3color.reverse"/>
    <field id="switch" type="boolean" value="true" alwaysNotify= "true" />
    <field id="Width" type="integer" />
</interface>

<children>

<Group id="circles">

<Poster
        id="circleOne"
        width="60"
        height="60"
        translation="[0, 60]"
        uri="pkg:/images/white_circle.png"
        blendColor = "0xFF0000FF"
      />

<Poster
        id="circleTwo"
        width="60"
        height="60"
        translation="[60, 60]"
        uri="pkg:/images/white_circle.png"
        blendColor = "0xFF0000FF"
      />
          
<Poster
        id="circleThree"
        width="60"
        height="60"
        translation="[120, 60]"
        uri="pkg:/images/white_circle.png"
        blendColor = "0xFF0000FF"
      />

</Group>

<ParallelAnimation id="animateCircles">

<Animation id="c1Animation" easeFunction="inOutQuad" repeat="false" control= "start" delay= "0">
<Vector2DFieldInterpolator
          id="c1translation"
          fieldToInterp="circleOne.translation"
          key="[0.0, 1.0]"
          keyValue="[ [0.0, 60.0], [0.0, 0.0] ]"
        />
</Animation>

<Animation id="c2Animation" easeFunction="inOutQuad" repeat="false" control= "start" delay="0.1">
<Vector2DFieldInterpolator
          id="c2translation"
          fieldToInterp="circleTwo.translation"
          key="[0.0, 1.0]"
          keyValue="[ [60.0, 60.0], [60.0, 0.0] ]"
        />
</Animation>

<Animation id="c3Animation" easeFunction="inOutQuad" repeat="false" control="start" delay= "0.2">
<Vector2DFieldInterpolator
          id="c3translation"
          fieldToInterp="circleThree.translation"
          key="[0.0, 1.0]"
          keyValue="[ [120.0, 60.0], [120.0, 0.0] ]"
        />
</Animation>

<Animation
        id="c1AnimationColor"
        easeFunction="linear"
        delay="0.2"
      >
<ColorFieldInterpolator
          id="c1color"
          key="[0.0, 0.5, 1.0]"
          keyValue="[ 0xFF0000FF, 0x00FF00FF, 0x0000FFFF ]"
          fieldToInterp="circleOne.blendColor"
        />
</Animation>

<Animation
        id="c2AnimationColor"
        easeFunction="linear"
        delay="0.4"
      >
<ColorFieldInterpolator
          id="c2color"
          key="[0.0, 0.5, 1.0]"
          keyValue="[ 0xFF0000FF, 0x00FF00FF, 0x0000FFFF ]"
          fieldToInterp="circleTwo.blendColor"
        />
</Animation>

<Animation
        id="c3AnimationColor"
        easeFunction="linear"
        delay="0.6"
      >
<ColorFieldInterpolator
          id="c3color"
          key="[0.0, 0.5, 1.0]"
          keyValue="[ 0xFF0000FF, 0x00FF00FF, 0x0000FFFF ]"
          fieldToInterp="circleThree.blendColor"
        />
</Animation>

</ParallelAnimation>

</children>

<script
    type="text/brightscript"
    uri="pkg:/components/LoadingAnimation/LoadingAnimation.brs"
  />

</component>