<component name="LoginScreen" extends="Group" initialFocus="login"> 

<children>
<Poster
id="logo" 
uri="pkg:/images/channel-poster_hd.png"
width="200"
height="140"
/>
<FocusableLayoutGroup
    id="group"
	translation="[0, 0]"
	horizAlignment="center"
	vertAlignment = "center"
	itemSpacings= "[10,10]">
	<CustomTextEditBox
	id="login"
	width="300"
	height="50"
	hintText="Login"
	focusable="true"
	/>
	<CustomTextEditBox
	id="password"
	width="300"
	height="50"
	hintText="Password"
	focusable="true"
	secureMode = "true"
	/>
	<AnimatedButton
	height="50"
    width= "100"
    id = "enter"
    text = "Enter"
	focusable="true"
	footprintUri= "pkg:/images/button.png"
	footprintUriInFocus="pkg:/images/buttonFocus.png"
	/>
</FocusableLayoutGroup>
</children>

<script type="text/brightscript" uri="pkg:/components/LoginScreen/LoginScreen.brs" />

</component>
