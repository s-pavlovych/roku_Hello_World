<component name="HomePage" extends="Screen" initialFocus = "home">
    <interface>
        <field id="visibleScreen" type="node" />
        <field id="contentIsShown" type="boolean" alias= "homeScreen.isShown" />
    </interface>
<children>
    <HomeScreen
    id="homeScreen"
    visible = "false"
    isShown = "false"
    />
    <SettingsScreen
    id="settingsScreen"
    visible = "false"
    isShown = "true"
    />
    <FavoritesScreen
    id="favoritesScreen"
    visible = "false"
    isShown = "true"
    />
<FocusableLayoutGroup
    id="group"
    layoutDirection= "horiz"
	translation="[0, 0]"
	horizAlignment="center"
	vertAlignment = "top"
	itemSpacings= "[30,30]">
	<AnimatedButton
	height="90"
    width= "150"
    id = "home"
    text = "Home"
	focusable="true"
	footprintUri= "pkg:/images/buttonUnfocused.png"
	footprintUriInFocus="pkg:/images/buttonFocus.png"
	/>
    <AnimatedButton
	height="90"
    width= "150"
    id = "myList"
    text = "My list"
	focusable="true"
	footprintUri= "pkg:/images/buttonUnfocused.png"
	footprintUriInFocus="pkg:/images/buttonFocus.png"
	/>
    <AnimatedButton
	height="90"
    width= "150"
    id = "options"
    text = ""
	focusable="true"
	footprintUri= "pkg:/images/SettingsButtonUnfocused.png"
	footprintUriInFocus="pkg:/images/SettingsButtonFocus.png"
	/>
    
</FocusableLayoutGroup>
    
</children>

<script type="text/brightscript" uri="HomePage.brs" />
    
</component>