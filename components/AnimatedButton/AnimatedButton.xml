<component name="AnimatedButton" extends="Group">
<interface>
    <field id="text" type="string" alias="text.text" />
    <field id="color" type="color" value="#ffffff" />
    <field id="colorInFocus" type="color" value= "#000000" />
    <field id="footprintUri" type="string" onChange= "setFootprint" />
    <field id="footprintUriInFocus" type="string" />
    <field id="height" type="integer" alias="footprint.height, text.height" />
    <field id="width" type="integer" alias="footprint.width, text.width" />
    <field id="isSelected" type="boolean" />
</interface>

<children>
    <Poster
    id="footprint"
    opacity = "1"
    />
    <Label
    id="text"
    horizAlign= "center"   
    vertAlign= "center"   
    /> 
    <Animation id="footAnimation" duration = "0.5" easeFunction="inOutQuad" repeat="false" control= "stop" delay= "0" >
    <FloatFieldInterpolator
    id="fade"
    fieldToInterp="footprint.opacity"
    key="[0.0, 1.0]"
    keyValue="[ [0.8], [1.0] ]"
    />
    </Animation>
</children>



<script type="text/brightscript" uri="AnimatedButton.brs" />
    
</component>