<component name="LoadingFacade" extends="Group">
<interface>
    <field id="control" type="string" alias="backAnimation.control" />
    <field id="isShown" type="boolean" value="false" />
</interface>
<children>
<Rectangle
id="background"
width="1920"
height="1080"
blendingEnabled="true"
opacity= "0"
color="#0000FF "
/>
<LoadingAnimation
id= "loading"
control="stop"
duration = "0.5"
/>
<Animation id="backAnimation"  duration = "0.5" easeFunction="inOutQuad" repeat="false" control= "stop" delay= "0">
    <FloatFieldInterpolator
        id="fade"
        fieldToInterp="background.opacity"
        key="[0.0, 1.0]"
        keyValue="[ [0.0], [0.8] ]"
        />
    </Animation>

</children>
    <script type="text/brightscript" uri="LoadingFacade.brs" />    
</component>